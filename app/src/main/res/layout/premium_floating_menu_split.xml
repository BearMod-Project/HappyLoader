<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="600dp"
    android:layout_height="400dp"
    android:orientation="horizontal"
    android:background="@drawable/modern_main_background"
    android:elevation="12dp"
    android:padding="0dp">

    <!-- Sidebar (Vertical Tabs) -->
    <androidx.cardview.widget.CardView
        android:layout_width="80dp"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#1A1A1A"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        android:layout_marginEnd="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/modern_sidebar_background"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <!-- ESP Tab -->
            <LinearLayout
                android:id="@+id/sidebar_tab_visual"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/modern_sidebar_tab_selector"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginHorizontal="6dp"
                android:layout_marginVertical="3dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/visual"
                    android:scaleType="centerInside"
                    app:tint="#FFFFFF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ESP"
                    android:textColor="#FFFFFF"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/agency_bold" />
            </LinearLayout>

            <!-- Items Tab -->
            <LinearLayout
                android:id="@+id/sidebar_tab_items"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/modern_sidebar_tab_selector"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginHorizontal="6dp"
                android:layout_marginVertical="3dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/loot"
                    android:scaleType="centerInside"
                    app:tint="#FFFFFF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Items"
                    android:textColor="#FFFFFF"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/agency_bold" />
            </LinearLayout>

            <!-- Aimbot Tab -->
            <LinearLayout
                android:id="@+id/sidebar_tab_aimbot"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/modern_sidebar_tab_selector"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginHorizontal="6dp"
                android:layout_marginVertical="3dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_aim"
                    android:scaleType="centerInside"
                    app:tint="#FFFFFF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aim"
                    android:textColor="#FFFFFF"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/agency_bold" />
            </LinearLayout>

            <!-- Memory Tab -->
            <LinearLayout
                android:id="@+id/sidebar_tab_memory"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/modern_sidebar_tab_selector"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginHorizontal="6dp"
                android:layout_marginVertical="3dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/baseline_warning_24"
                    android:scaleType="centerInside"
                    app:tint="#FFFFFF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hack"
                    android:textColor="#FFFFFF"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/agency_bold" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Content Area -->
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:cardBackgroundColor="#0F0F0F"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/modern_content_background">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical"
                android:background="@drawable/modern_header_background">

                <ImageView
                    android:id="@+id/content_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/visual"
                    android:scaleType="centerInside"
                    app:tint="#00FF7F" />

                <TextView
                    android:id="@+id/content_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ESP Visual"
                    android:textColor="#00FF7F"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/agency_bold" />

                <!-- Close Button -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/close_menu"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    app:cardBackgroundColor="#FF4444"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="4dp"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Ã—"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="center" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Content Scrollable Area -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <!-- ESP Visual Content -->
                <ScrollView
                    android:id="@+id/content_visual"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none"
                    android:fadeScrollbars="true"
                    android:visibility="visible">

                    <LinearLayout
                        android:id="@+id/menuf1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp" />
                </ScrollView>

                <!-- Items Content -->
                <ScrollView
                    android:id="@+id/content_items"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none"
                    android:fadeScrollbars="true"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/menuf2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp" />
                </ScrollView>

                <!-- Aimbot Content -->
                <ScrollView
                    android:id="@+id/content_aimbot"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none"
                    android:fadeScrollbars="true"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/menuf3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp" />
                </ScrollView>

                <!-- Memory Content -->
                <ScrollView
                    android:id="@+id/content_memory"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none"
                    android:fadeScrollbars="true"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/menuf4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp" />
                </ScrollView>

            </FrameLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout> 