<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/background">

    <ImageView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:visibility="visible"
        android:background="@drawable/shape"
        android:backgroundTint="@color/button"/>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:visibility="visible"
        android:orientation="vertical"
        android:id="@+id/lay_login">

        <LinearLayout
            android:layout_height="70dp"
            android:layout_width="match_parent"
            android:layout_marginEnd="20dp"
            android:gravity="top"
            android:orientation="vertical"
            android:layout_marginStart="20dp"
            android:id="@+id/header">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:gravity="end">

                <com.skydoves.powerspinner.PowerSpinnerView
                    android:id="@+id/bahasa"
                    android:layout_width="110.0dip"
                    android:layout_height="40.0dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/en_regular"
                    android:gravity="center"
                    android:hint="English"
                    android:padding="10.0dip"
                    android:textColor="#fff"
                    android:textColorHint="#ffff"
                    android:textSize="14.5sp"
                    android:textStyle="bold"
                    app:spinner_arrow_animate="true"
                    app:spinner_arrow_gravity="end"
                    app:spinner_arrow_padding="8.0dip"
                    app:spinner_arrow_tint="#fff"
                    app:spinner_divider_color="#79FFFFFF"
                    app:spinner_divider_show="true"
                    app:spinner_divider_size="0.25dip"
                    app:spinner_item_array="@array/bahasa"
                    app:spinner_item_height="40.0dip"
                    app:spinner_popup_animation="dropdown"
                    app:spinner_popup_background="@drawable/custom_border_input1"
                    app:spinner_popup_elevation="5.0dip"
                    app:spinner_popup_focusable="true"
                    app:spinner_preference_name="country" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginEnd="20dp"
            android:layout_below="@id/header"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginStart="20dp"
            android:id="@+id/katakata">

            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="150dp"
                android:foregroundGravity="center"
                android:adjustViewBounds="true"
                android:src="@drawable/icon"
                android:layout_marginTop="10dp" />

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/font1"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:text="LOGIN TO CONTINUE" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@id/katakata"
            android:layout_marginEnd="30dp"
            android:gravity="center|center_horizontal|center_vertical"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:id="@+id/login">

            <!-- Single License Key Input Field -->
            <LinearLayout
                android:layout_height="55dp"
                android:layout_width="match_parent"
                android:weightSum="10"
                android:layout_marginEnd="0dp"
                android:background="@drawable/corner1"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:layout_marginStart="0dp">

                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_account_key"
                    android:gravity="start"
                    android:layout_weight="0.95" />

                <EditText
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:elevation="5dp"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:layout_marginStart="12dp"
                    android:ems="10"
                    android:background="@null"
                    android:gravity="start|center_vertical"
                    android:hint="Enter License Key"
                    android:textColorHint="@color/white"
                    android:fontFamily="@font/cof"
                    android:layout_weight="7.5"
                    android:inputType="textVisiblePassword|textNoSuggestions"
                    android:id="@+id/licenseKeyInput"
                    android:maxLines="1"
                    android:singleLine="true" />

                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/baseline_content_paste_go_24"
                    android:gravity="end"
                    android:layout_weight="0.95"
                    android:id="@+id/pasteButton"
                    android:padding="4dp" />

                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/baseline_close_24"
                    android:gravity="end"
                    android:layout_weight="0.6"
                    android:id="@+id/clearButton"
                    android:padding="4dp"
                    android:visibility="gone" />

            </LinearLayout>

            <!-- KeyAuth Information -->
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:padding="8dp"
                android:background="@drawable/corner1"
                android:backgroundTint="#1A4CAF50">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/cof"
                    android:textSize="11sp"
                    android:textColor="#A0FFFFFF"
                    android:text="🔐 Secured by KeyAuth API 1.3" />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_height="50dp"
                android:layout_width="match_parent"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/button"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="7dp"
                android:id="@+id/btnSignIn">

                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:fontFamily="@font/bold"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:text="LOGIN" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/cof"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:text="If don't have key ?" />

                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/cof"
                    android:textSize="15sp"
                    android:textColor="@color/button"
                    android:layout_marginStart="5dp"
                    android:id="@+id/GetKey"
                    android:text="Get Key" />

            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:visibility="gone"
                    android:textSize="12sp"
                    android:fontFamily="@font/cof"
                    android:textColor="@color/button"
                    android:id="@+id/pp"
                    android:textStyle="normal"
                    android:text="Privacy Policy" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <android.webkit.WebView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:background="@color/background"
        android:id="@+id/activity_main_webview">

    </android.webkit.WebView>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginBottom="15dp"
        android:gravity="bottom|center"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginEnd="5.0dip"
            android:textSize="12.0sp"
            android:fontFamily="@font/cof"
            android:textColor="@color/white"
            android:layout_marginStart="10.0dip"
            android:text="Rei Pro" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginEnd="18.0dip"
            android:textSize="12.0sp"
            android:fontFamily="@font/cof"
            android:textColor="@color/white"
            android:text="v1.9.0" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0.0dip"
            android:layout_marginEnd="15.0dip"
            android:gravity="end"
            android:textSize="12.0sp"
            android:fontFamily="@font/cof"
            android:textColor="@color/white"
            android:layout_weight="1.0"
            android:text="Powered By : Rei Pro" />

    </LinearLayout>

</RelativeLayout>